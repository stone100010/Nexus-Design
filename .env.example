# 项目根目录环境变量模板
# 复制此文件为 .env 然后填入实际值

# ===== 数据库配置 =====
DATABASE_URL="postgresql://user:password@localhost:5432/nexus_design?schema=public"

# ===== NextAuth 配置 =====
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"  # 使用命令生成: openssl rand -base64 32

# ===== 演示账号密码（仅开发环境使用） =====
NEXUS_DEMO_PASSWORD="demo123_secure"
NEXUS_ADMIN_PASSWORD="admin123_secure"

# ===== OAuth Providers (可选) =====
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===== OpenAI API =====
OPENAI_API_KEY="sk-your-api-key-here"
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL="gpt-4-turbo-preview"

# ===== Redis (可选) =====
REDIS_URL="redis://localhost:6379"

# ===== AWS S3 (可选) =====
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET="nexus-design-prod"

# ===== Cloudinary (可选) =====
CLOUDINARY_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ===== 应用配置 =====
APP_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api/v1"
NEXT_PUBLIC_DEBUG="true"
